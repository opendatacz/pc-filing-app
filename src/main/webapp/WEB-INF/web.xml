<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>TenderStats</display-name>
    <context-param>
        <param-name>allowCasualMultipartParsing</param-name>
        <param-value>true</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--<filter>
      <filter-name>Jetty6-Gzip</filter-name>
      <filter-class>org.mortbay.servlet.GzipFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>Jetty6-Gzip</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>-->
    <filter>
        <filter-name>UTF8ParamsEncoding</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>FlashMessage</filter-name>
        <filter-class>cz.opendata.tenderstats.FlashMessage</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UTF8ParamsEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FlashMessage</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SystemManager</servlet-name>
        <servlet-class>cz.opendata.tenderstats.SystemManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemManager</servlet-name>
        <url-pattern>/SystemManager/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PCFilingApp</servlet-name>
        <servlet-class>cz.opendata.tenderstats.PCFilingApp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PCFilingApp</servlet-name>
        <url-pattern>/PCFilingApp/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InvitationComponent</servlet-name>
        <servlet-class>cz.opendata.tenderstats.InvitationComponent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InvitationComponent</servlet-name>
        <url-pattern>/InvitationComponent/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Matchmaker</servlet-name>
        <servlet-class>cz.opendata.tenderstats.Matchmaker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Matchmaker</servlet-name>
        <url-pattern>/Matchmaker/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PriceEstimation</servlet-name>
        <servlet-class>cz.opendata.tenderstats.PriceEstimation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PriceEstimation</servlet-name>
        <url-pattern>/PriceEstimation/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NumberOfBidders</servlet-name>
        <servlet-class>cz.opendata.tenderstats.NumberOfBidders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NumberOfBidders</servlet-name>
        <url-pattern>/NumberOfBidders/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ContractsComponent</servlet-name>
        <servlet-class>cz.opendata.tenderstats.ContractsComponent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContractsComponent</servlet-name>
        <url-pattern>/ContractsComponent/*</url-pattern>
    </servlet-mapping>
</web-app>
